<% include ../partials/header.ejs %>

    <!-- Content for the Add Item Page -->
    <div class="background_form"></div>
    <div class="container">
        <div class="row">
            <div class="col-md-offset-3 col-md-6" id="centerForm_C">
                <h1>
                    <%= title %>
                </h1>

                <form class="form" method="POST">
                    <div class="form-group">
                        <label for="itemId">itemId:</label>
                        <input type="text" class="form-control" name="itemId" placeholder="Enter Item Id" id="itemId"
                            required autocomplete="off" value="<%= item.itemId %>">
                    </div>

                    <div class="form-group">
                        <label for="resName">restaurantName:</label>
                        <input type="text" class="form-control" name="resName" placeholder="Enter RestaurantName"
                            id="resName" required autocomplete="off" value="<%= item.restaurantName %>">
                    </div>

                    <div class="form-group">
                        <label for="itemName">itemName:</label>
                        <input type="text" class="form-control" name="itemName" placeholder="Enter Item Name"
                            id="itemName" required autocomplete="off" value="<%= item.itemName %>">
                    </div>

                    <div class="form-group">
                        <label for="quantity">Inventory:</label>
                        <input type="number" class="form-control" name="quantity" placeholder="Enter Quantity"
                            id="quantity" required autocomplete="off" value="<%= item.quantity %>">
                    </div>

                    <div class="form-group">
                        <label for="itemURL">Image URL</label>
                        <input type="text" class="form-control" name="itemURL" placeholder="Enter image URL"
                            id="itemURL" required autocomplete="off" value="<%= item.imageURL %>">
                    </div>

                    <div class="form-group">
                        <label for="price">Price:</label>
                        <input type="number" min="0" step="0.01" data-number-to-fixed="2" data-number-stepfactor="100"
                            class="form-control currency" name="price" placeholder="Enter price" id="price" required
                            autocomplete="off" value="<%= item.price %>">
                    </div>

                    <button type="submit" class="btn btn-primary" style="margin-bottom: 10px;">
                        <i class="fas fa-edit"></i> Submit</button>
                    <a href="/item-list/<%=item.restaurantName%>" class="btn btn-warning" style="margin-bottom: 10px;">
                        <i class="fas fa-undo"></i> Cancel</a>
                </form>


            </div>
        </div>
    </div>





    <% include ../partials/footer.ejs %>